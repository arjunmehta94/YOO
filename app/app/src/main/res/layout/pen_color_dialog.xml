    <android.support.v7.widget.AppCompatButton
        android:id="@+id/black_color_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/round_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"

        />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/red_color_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/round_button"
        android:layout_toRightOf="@+id/black_color_button"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:backgroundTint="#FF0000"
        />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/orange_color_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/round_button"
        android:layout_toRightOf="@+id/red_color_button"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:backgroundTint="#FFA500"
        />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/green_color_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/round_button"
        android:layout_toRightOf="@+id/orange_color_button"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:backgroundTint="#008000"
        />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/blue_color_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/round_button"
        android:layout_toRightOf="@+id/green_color_button"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:backgroundTint="#0000FF"
        />


</RelativeLayout>